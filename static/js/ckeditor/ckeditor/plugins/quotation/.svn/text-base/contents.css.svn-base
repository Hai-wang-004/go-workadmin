.content-text-focus{
    display: block;
    font-size: 16px;
    font-style: normal;
    font-weight: normal;

    margin:0 15px 15px;

    position: relative;
    border-left:5px solid #f35b41;
    padding-left:  15px;
    display: block;}
.content-text-focus .content-text-caption * {
margin: 0;


}
.content-text-focus  .content-text-caption{

    font-size: 18px;
    color: #898989;
    line-height: 30px;


}
.content-text-focus.align-right {
	float: right;
	width:400px;
}
.content-text-focus.align-left {
	float: left;
	width:400px;
}
.content-text-focus.align-center {
	margin-left: auto;
	margin-right: auto;
}